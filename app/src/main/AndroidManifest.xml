<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adarshpanig.librehealthpoc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name="com.adarshpanig.librehealthpoc.HospitalsResult"
            android:theme="@style/AppTheme2"></activity>

        <activity android:name="com.adarshpanig.librehealthpoc.SearchHospital"
            android:theme="@style/AppTheme2"/>

        <activity android:name="com.adarshpanig.librehealthpoc.SettingsPage"
            android:theme="@style/AppTheme2"/>
        <activity android:name="com.adarshpanig.librehealthpoc.NotificationsPage"
            android:theme="@style/AppTheme2"/>
        <activity android:name="com.adarshpanig.librehealthpoc.DrugsPage"
            android:theme="@style/AppTheme3"/>
        <activity android:name="com.adarshpanig.librehealthpoc.HomePage"
            android:theme="@style/AppTheme2"/>
        <activity android:name="com.adarshpanig.librehealthpoc.LoginActivity"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.adarshpanig.librehealthpoc.SplashScreen"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>